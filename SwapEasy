#!/bin/bash
# ðŸ§± Auto Swapfile Setup Script (16GB)
# âœ¨ Made by Para777 âœ¨

set -e

echo "ðŸ”„ === Updating system packages ==="
sudo apt update -y >/dev/null 2>&1

echo "ðŸ§± === Creating 16GB swap file ==="
sudo fallocate -l 16G /swapfile

echo "ðŸ”’ === Setting correct permissions ==="
sudo chmod 600 /swapfile

echo "âš™ï¸ === Formatting swap space ==="
sudo mkswap /swapfile >/dev/null 2>&1

echo "ðŸš€ === Enabling swap ==="
sudo swapon /swapfile

echo "ðŸ’¾ === Making swap permanent ==="
if ! grep -q '/swapfile none swap sw 0 0' /etc/fstab; then
  echo '/swapfile none swap sw 0 0' | sudo tee -a /etc/fstab >/dev/null
fi

echo "âœ… === Swap setup complete! ==="
sudo swapon --show
free -h

echo ""
echo "âœ¨ðŸŽ‰ 16GB Swap successfully configured! Script by Para777 âœ¨"
